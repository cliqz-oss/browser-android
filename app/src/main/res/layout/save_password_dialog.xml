<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/password_dialog_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_password" />

    <ImageButton
        android:id="@+id/password_dialog_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_clear_black" />

    <TextView
        android:id="@+id/password_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/password_dialog_icon"
        android:layout_toEndOf="@id/password_dialog_icon"
        android:layout_toRightOf="@id/password_dialog_icon"
        android:layout_toStartOf="@id/password_dialog_close_button"
        android:layout_toLeftOf="@id/password_dialog_close_button"
        android:paddingTop="10dp"
        android:text="@string/save_password_text"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/password_dialog_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/password_dialog_close_button"
        android:layout_alignRight="@id/password_dialog_close_button"
        android:layout_below="@id/password_dialog_close_button"
        android:padding="20dp"
        android:text="@string/save"
        android:textAllCaps="true"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/password_dialog_never_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/password_dialog_save_button"
        android:layout_toLeftOf="@id/password_dialog_save_button"
        android:layout_toStartOf="@id/password_dialog_save_button"
        android:paddingTop="20dp"
        android:text="@string/never"
        android:textAllCaps="true"
        android:textColor="@color/primary_color" />

</RelativeLayout>