<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_item_layout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/dashboard_item_background"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:src="@drawable/ic_anti_phishing_hook_enabled" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/item_measurement_value"
                style="@style/dashboard_measurement_value"
                tools:text="GB" />

            <TextView
                android:id="@+id/item_measurement_unit"
                style="@style/dashboard_measurement_value"
                tools:text="GB" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                style="@style/dashboard_item_title"
                android:textAlignment="textStart"
                tools:text="Item Title" />

            <TextView
                android:id="@+id/item_content"
                style="@style/dashboard_item_content"
                android:textAlignment="textStart"
                tools:text="Item content is written here" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/item_money_bar_value"
        style="@style/dashboard_item_content"
        android:layout_marginTop="20dp"
        tools:text="15 €" />

    <SeekBar
        android:visibility="gone"
        android:id="@+id/item_money_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="495"
        android:progressTint="#00aef0" />

</LinearLayout>
